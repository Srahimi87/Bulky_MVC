@model Category

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4" style="width: 70%; margin: 40px;">
        <div class="row pb-2">
            <h2 class="text-dark">Delete Category</h2>
            <hr/>
        </div>
        <div class="mb-3 row p-1" style="width: 70%; margin: 40px;">
            <label class="p=0">Category Name</label>
            <input asp-for="Name" disabled class="form-control"/>
   
        </div>
        <div class="mb-3 row p-1" style="width: 70%; margin: 40px;">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
            
            </div>
        </div>
        <div class="row">
            <div class="col-6 mt-4" style="width: 30%; margin: 40px;">
                 <button type="submit" class="btn btn-dark form-control" >Delete</button>
            </div>
            <div class="col-6 mt-4" style="width: 30%; margin: 40px;">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">
            back to List
                </a>
            </div>
        </div>
    </div>
</form>



